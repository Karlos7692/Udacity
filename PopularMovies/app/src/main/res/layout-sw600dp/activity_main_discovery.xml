<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/main_discovery_fragment"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:name="com.nelson.karl.popularmovies.MainDiscoveryFragment"
        tools:context="com.nelson.karl.popularmovies.MainDiscoveryFragment"
        tools:layout="@layout/fragment_main_discovery" />

    <FrameLayout
        android:id="@+id/movie_detail_fragment_container"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"/>

</LinearLayout>
